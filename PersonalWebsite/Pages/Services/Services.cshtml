@page
@model PersonalWebsite.Pages.Services.ServicesModel

@{
    ViewData["Title"] = "Services";

}
<style>
    body {
        background: linear-gradient(135deg, #1B262C, #0F4C75, #3282B8);
        font-family: american typewriter, serif;
    }
    h6 {
        font-size: 18px;
        
        text-align: center;
        color: #F0F0F0;
    }
    
    h3 {
        font-size: 32px;
        font-weight: bold;
        color: #F0F0F0;
        text-align: center;
    }
        h2 {
        font-size: 40px;
        font-weight: bold;
        color: #F0F0F0;
        text-align: center;
    }

        h2:hover {
            transition: font-size 0.3s ease-in-out;
            font-size: 48px;
        }

    h1 {
        font-size: 24px;
        text-align: center;
    }

        h1:hover {
            transition: font-size 0.3s ease-in-out;
            font-size: 32px;
        }

    h4 {
        text-align: center;
        
    }

    ul {
        list-style: disc;
        text-align: left;
    }

    .pricing-header {
        max-width: 700px;
        margin: 0 auto;
    }

    .pricing-card-title {
        font-size: 2.5rem;
        text-align: center;
    }


    .card {
        border: none;
        margin-bottom: 30px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 5px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .card-body {
        text-align: center;
    }

    .card-title {
        margin-top: 10px;
        margin-bottom: 15px;
        font-weight: bold;
        font-size: 1.5rem;
    }

    .card-subtitle {
        margin-bottom: 10px;
        font-weight: bold;
        font-size: 1.25rem;
    }

    .card-text {
        margin-bottom: 15px;
        font-size: 1.2rem;
    }

    .card-footer {
        border-top: none;
        text-align: center;
    }

    .btn {
        background: linear-gradient(135deg, #1B262C, #0F4C75, #3282B8);
        border-radius: 20px;
        font-size: 1.2rem;
        padding: 10px 25px;
        transition: all 0.25s ease;
    }

        .btn:hover {
            transform: scale(1.1);
        }
    /* styling for the pricing table */
    .pricing-table {
        border-collapse: separate;
        border-spacing: 0;
        margin: 20px 0;
        width: fit-content;
        text-align: center;
        padding: 10px;
    }

        .pricing-table td:first-child {
            border: none;
            font-weight: bold;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
        }

       .pricing-table td:last-child {
            
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
        }

        .pricing-table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            background-color: #fff;
        }

            .pricing-table td.feature-name {
                text-align: left;
                background-color: #f0f0f0;
                width: fit-content;
            }

            .pricing-table td.feature-value {
                font-size: 1.5rem;
                vertical-align: middle;
            }

        /* updated color scheme */
        .pricing-table td {
            background-color: #f5f5f5;
            color: #333;
        }

            .pricing-table td.feature-name {
                background-color: #fff;
                color: #333;
            }
    

         
</style>
<br />
